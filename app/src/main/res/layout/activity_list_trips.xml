<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.matthew.trekaid.ListTripsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Trip List"
        android:id="@+id/tripListTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tripListLinearLayout"
        android:layout_above="@+id/mainMenuReturnButton"
        android:layout_below="@+id/tripListTextView" >

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tripListListView" />
    </LinearLayout>

    <Button
        android:id="@+id/mainMenuReturnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return to Main Menu" android:onClick="onClick"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
